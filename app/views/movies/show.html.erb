<h1> Movies </h1>

<%= image_tag(@movie.image_url.to_s) %>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong>Year:</strong>
  <%= @movie.year %>
</p>

<p>
  <strong>Description</strong>
  <%= @movie.description %>
</p>

<p>
  <strong>Director</strong>
  <%= @movie.director %>
</p>

<p>
  <strong>Cast</strong>
  <%= @movie.cast %>
</p>

<%= link_to "Add Review", new_movie_review_path(@movie) %>

<% @reviews.each do |review| %>
  <div id="user_<%= review.user_id %>">
    <%= simple_form_for @vote do |f| %>
      <a id="upvote"> 
        <%= f.hidden_field :value, value: 1 %>
        <%= f.button :submit, "+" %>
      </a>
    <% end %>
    <%= review.vote_count %>
  <a id="downvote"> - </a>
    <%= review.rating%>
    <%= review.body%>
  </div>
<% end %>
