<h1> Movies </h1>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong>Year:</strong>
  <%= @movie.year %>
</p>

<p>
  <strong>Description</strong>
  <%= @movie.description %>
</p>

<p>
  <strong>Director</strong>
  <%= @movie.director %>
</p>

<p>
  <strong>Cast</strong>
  <%= @movie.cast %>
</p>

<%= link_to "Add Review", new_movie_review_path(@movie) %>

<%= @reviews.each do |review| %>
  <%= review.rating%>
  <%= review.body%>
  
<% end %>
